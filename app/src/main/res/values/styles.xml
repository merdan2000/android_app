<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="knopka">
        <item name="backgroundTint">@color/purple_700</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="knopka_orange" parent="knopka">
        <item name="backgroundTint">@color/purple_700</item>
    </style>

    <style name="knopka_dark" parent="knopka">
        <item name="backgroundTint">@color/purple_700</item>
    </style>

    <style name="knopka_orange_buttom" parent="knopka_orange">
        <item name="android:layout_weight">1.5</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="knopka_gray_buttom" parent="knopka">
        <item name="android:layout_weight">1.5</item>
    </style>

</resources>